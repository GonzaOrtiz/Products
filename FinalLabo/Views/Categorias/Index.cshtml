@model IEnumerable<FinalLabo.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h3>Marcas</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-primary shadow-sm" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details"  class="btn btn-success shadow-sm" asp-route-id="@item.Id">Detalles</a> 
                <a asp-action="Delete" class="btn btn-danger shadow-sm" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
